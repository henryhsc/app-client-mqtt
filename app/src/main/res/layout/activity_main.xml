<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/llDatosConexion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Proporcione datos para autenticarse"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/etEmail"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Documento de identidad"/>
        <EditText
            android:id="@+id/etPassword"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="telefono"/>
        <Button
            android:id="@+id/btSuscribir"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="subscribe"
            android:text="Suscribirse"
            android:layout_weight="2"/>
        <ProgressBar
            android:id="@+id/pbPeticion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
    <Button
        android:id="@+id/btCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="cancelarSuscripcion"
        android:text="Cancelar suscripcion"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/tvEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Estado"/>
    </ScrollView>

</LinearLayout>